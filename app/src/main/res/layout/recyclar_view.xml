<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
tools:ignore="UselessParent">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/purple_500"
    app:strokeColor="@color/white"
    app:strokeWidth="0.8dp"
    app:cardElevation="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/today_time_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="4dp"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/toady_temprature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_time_show"
            android:gravity="center"
            android:padding="4dp"
            android:text="20"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/today_weather_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/toady_temprature"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/toady_temprature"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-75dp"
            android:layout_gravity="left"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/wind"
            android:padding="4dp" />

        <TextView
            android:id="@+id/list_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:text="NA"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="55dp"/>

        <TextView
            android:id="@+id/list_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:text="NA"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="280dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/winddirection"
            android:padding="4dp" />

        <TextView
            android:id="@+id/today_wind_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/today_weather_icon"
            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:text="13km/h"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/white" />



    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</LinearLayout>
